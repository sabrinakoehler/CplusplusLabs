#include <iostream>
using namespace std;

int main()
{
  string isGoingToParty;
  string isPartyOutside;
  string isRaining;

  cout << "Are you going to the party? ";
  cin >> isGoingToParty;
  cout << isGoingToParty;
  cout << endl;

  if (isGoingToParty == "yes")
  {
    cout << "Is the party outside? ";
    cin >> isPartyOutside;
    cout << isPartyOutside;
    cout << endl;
    if (isPartyOutside == "yes")
    {
      cout << "Might it rain? ";
      cin >> isRaining;
      cout << isRaining;
      cout << endl;
      if (isRaining == "yes")
      {
        cout << "Wear an old outfit.";
        cout << endl;
      }
      else
      {
        cout << "Wear your current outfit.";
        cout << endl;
      }
    }
    else
    {
      cout << "Wear your new outfit.";
      cout << endl;
    }
  }
  else
  {
    cout << "Call to apologize";
    cout << endl;
  }

  return 0;
}
